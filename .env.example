# Firebase Configuration (Client-Side)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Stripe Configuration (Client-Side)
# Set to 'true' to enable real Stripe payments, 'false' for development simulation
VITE_STRIPE_ENABLED=false

# Admin API Base URL (Netlify Functions - fallback from Firebase Functions due to org policies)
# Production: https://idynify.com/.netlify/functions
# Development: http://localhost:8888/.netlify/functions (when using netlify dev)
VITE_ADMIN_API_BASE=https://idynify.com/.netlify/functions

# Server-Side Environment Variables (Netlify Functions)
# These should be added in Netlify Dashboard → Site settings → Environment variables

# Firebase Admin SDK (for server-side operations)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"

# Firebase Functions Environment Variables
# These should be set using: firebase functions:config:set
# OR in Google Cloud Console → Cloud Functions → Runtime environment variables

# Admin User IDs (comma-separated UIDs for bootstrap admin access)
# Example: ADMIN_USER_IDS=uid1,uid2,uid3
# Note: Firestore users/{uid}/role='admin' is the preferred method
ADMIN_USER_IDS=

# Anthropic Claude API (for AI generation)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx

# Stripe (for payment processing)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
