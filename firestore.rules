rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Module 2: Database Schema - Firestore Security Rules
    // Users can read their own data OR any authenticated user can read (backend enforces admin checks)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // User subcollections are accessible by authenticated users (backend enforces admin checks)
    match /users/{userId}/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
